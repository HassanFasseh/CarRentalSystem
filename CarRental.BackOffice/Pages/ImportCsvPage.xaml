<Page x:Class="CarRental.BackOffice.Pages.ImportCsvPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Import CSV">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Import Data from CSV" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="Select CSV file to import:" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBox x:Name="FilePathTextBox" Width="400" Margin="0,0,10,0" IsReadOnly="True"/>
                <Button Content="Browse..." Click="BrowseButton_Click" Padding="10,5"/>
            </StackPanel>
            
            <TextBlock Text="Data type:" Margin="0,0,0,10"/>
            <ComboBox x:Name="DataTypeComboBox" Margin="0,0,0,20" Padding="5">
                <ComboBoxItem Content="Vehicles" IsSelected="True"/>
                <ComboBoxItem Content="Clients"/>
            </ComboBox>
            
            <Button Content="Import from CSV" Click="ImportButton_Click" Padding="10,5" Width="150" HorizontalAlignment="Left"/>
            
            <TextBlock x:Name="StatusTextBlock" Margin="0,20,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>

