<Page x:Class="CarRental.BackOffice.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dashboard">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Statistics Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Clients -->
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" 
                        Background="LightBlue" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Clients" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalClientsTextBlock" FontSize="32" 
                                   Text="0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Vehicles -->
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" 
                        Background="LightGreen" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Vehicles" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalVehiclesTextBlock" FontSize="32" 
                                   Text="0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Active Rentals -->
                <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" 
                        Background="LightYellow" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Active Rentals" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="ActiveRentalsTextBlock" FontSize="32" 
                                   Text="0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Total Revenue -->
                <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1" 
                        Background="LightCoral" Margin="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Total Revenue" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalRevenueTextBlock" FontSize="24" 
                                   Text="$0.00" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Additional Info -->
            <TextBlock Text="Welcome to the Car Rental Back Office System" 
                       FontSize="16" Margin="0,30,0,10"/>
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">
                <Run Text="Use the navigation menu on the left to manage clients, vehicles, rentals, and payments."/>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Page>

