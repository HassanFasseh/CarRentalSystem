<Page x:Class="CarRental.BackOffice.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Clients">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Clients Management" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Add New Client" Click="AddButton_Click" Margin="20,0,0,0" Padding="10,5"/>
            <Button Content="Refresh" Click="RefreshButton_Click" Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>
        
        <!-- Data Grid -->
        <DataGrid x:Name="ClientsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  SelectionChanged="ClientsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="120"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="120"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding User.Email}" Width="200"/>
                <DataGridTextColumn Header="License" Binding="{Binding DriverLicenseNumber}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Edit" Click="EditButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <Button Content="Delete" Click="DeleteButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <TextBlock x:Name="StatusTextBlock" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>

