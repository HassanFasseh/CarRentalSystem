<Window x:Class="CarRental.BackOffice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Rental - Back Office" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Menu -->
        <Border Grid.Column="0" Background="#F0F0F0" BorderBrush="Gray" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <TextBlock Text="Navigation" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Button Content="Dashboard" Click="DashboardButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Clients" Click="ClientsButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Vehicles" Click="VehiclesButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Vehicle Types" Click="VehicleTypesButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Rentals" Click="RentalsButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Payments" Click="PaymentsButton_Click" Margin="0,5" Padding="10,5"/>
                
                <Separator Margin="0,10"/>
                
                <Button Content="Availability Check" Click="AvailabilityButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Maintenance Alerts" Click="MaintenanceButton_Click" Margin="0,5" Padding="10,5"/>
                
                <Separator Margin="0,10"/>
                
                <Button Content="Export CSV" Click="ExportCsvButton_Click" Margin="0,5" Padding="10,5"/>
                <Button Content="Import CSV" Click="ImportCsvButton_Click" Margin="0,5" Padding="10,5"/>
                
                <Separator Margin="0,10"/>
                
                <TextBlock x:Name="UserInfoTextBlock" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
