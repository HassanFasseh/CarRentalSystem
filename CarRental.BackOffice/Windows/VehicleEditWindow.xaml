<Window x:Class="CarRental.BackOffice.Windows.VehicleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Vehicle" Height="500" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Vehicle Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" Text="Vehicle Type:" Margin="0,0,0,5"/>
        <ComboBox x:Name="VehicleTypeComboBox" Grid.Row="2" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="3" Text="License Plate:" Margin="0,0,0,5"/>
        <TextBox x:Name="LicensePlateTextBox" Grid.Row="4" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="5" Text="Make:" Margin="0,0,0,5"/>
        <TextBox x:Name="MakeTextBox" Grid.Row="6" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="7" Text="Model:" Margin="0,0,0,5"/>
        <TextBox x:Name="ModelTextBox" Grid.Row="8" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="9" Text="Year:" Margin="0,0,0,5"/>
        <TextBox x:Name="YearTextBox" Grid.Row="10" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="11" Text="Status:" Margin="0,0,0,5"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="12" Margin="0,0,0,15" Padding="5" IsEditable="False"/>
        
        <TextBlock Grid.Row="13" Text="Mileage:" Margin="0,0,0,5"/>
        <TextBox x:Name="MileageTextBox" Grid.Row="14" Margin="0,0,0,15" Padding="5"/>
        
        <StackPanel Grid.Row="15" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Padding="10,5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

