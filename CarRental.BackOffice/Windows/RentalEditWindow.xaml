<Window x:Class="CarRental.BackOffice.Windows.RentalEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Rental" Height="500" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Rental Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="1" Text="Client:" Margin="0,0,0,5"/>
        <ComboBox x:Name="ClientComboBox" Grid.Row="2" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="3" Text="Vehicle:" Margin="0,0,0,5"/>
        <ComboBox x:Name="VehicleComboBox" Grid.Row="4" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="5" Text="Start Date:" Margin="0,0,0,5"/>
        <DatePicker x:Name="StartDatePicker" Grid.Row="6" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="7" Text="End Date:" Margin="0,0,0,5"/>
        <DatePicker x:Name="EndDatePicker" Grid.Row="8" Margin="0,0,0,15"/>
        
        <TextBlock Grid.Row="9" Text="Daily Rate:" Margin="0,0,0,5"/>
        <TextBox x:Name="DailyRateTextBox" Grid.Row="10" Margin="0,0,0,15" Padding="5"/>
        
        <TextBlock Grid.Row="11" Text="Status:" Margin="0,0,0,5"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="12" Margin="0,0,0,15" Padding="5"/>
        
        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Padding="10,5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

