<Window x:Class="CarRental.BackOffice.Windows.QrCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR Code" Height="400" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="QR Code" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <Image x:Name="QrCodeImage" Grid.Row="1" Stretch="Uniform" Margin="0,0,0,15"/>
        
        <TextBlock x:Name="InfoTextBlock" Grid.Row="2" TextWrapping="Wrap" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <Button Content="Close" Click="CloseButton_Click" Padding="10,5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

