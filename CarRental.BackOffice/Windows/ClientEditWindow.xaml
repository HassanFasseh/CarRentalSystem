<Window x:Class="CarRental.BackOffice.Windows.ClientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Client" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Client Information" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- User Selection (for new clients) -->
        <TextBlock x:Name="UserLabel" Grid.Row="1" Text="User:" Margin="0,0,0,5"/>
        <ComboBox x:Name="UserComboBox" Grid.Row="2" Margin="0,0,0,15" Padding="5"/>
        
        <!-- First Name -->
        <TextBlock Grid.Row="3" Text="First Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="FirstNameTextBox" Grid.Row="4" Margin="0,0,0,15" Padding="5"/>
        
        <!-- Last Name -->
        <TextBlock Grid.Row="5" Text="Last Name:" Margin="0,0,0,5"/>
        <TextBox x:Name="LastNameTextBox" Grid.Row="6" Margin="0,0,0,15" Padding="5"/>
        
        <!-- Phone Number -->
        <TextBlock Grid.Row="7" Text="Phone Number:" Margin="0,0,0,5"/>
        <TextBox x:Name="PhoneNumberTextBox" Grid.Row="8" Margin="0,0,0,15" Padding="5"/>
        
        <!-- Address -->
        <TextBlock Grid.Row="9" Text="Address:" Margin="0,0,0,5"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="10" Margin="0,0,0,15" Padding="5" TextWrapping="Wrap" Height="60"/>
        
        <!-- Driver License -->
        <TextBlock Grid.Row="11" Text="Driver License Number:" Margin="0,0,0,5"/>
        <TextBox x:Name="DriverLicenseTextBox" Grid.Row="12" Margin="0,0,0,15" Padding="5"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" Padding="10,5" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="CancelButton_Click" Padding="10,5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

