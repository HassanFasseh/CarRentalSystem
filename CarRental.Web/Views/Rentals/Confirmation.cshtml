@model CarRental.Domain.Entities.Rental
@{
    ViewData["Title"] = "Rental Confirmation";
}

<h2>Rental Request Confirmed</h2>
<hr />

<div class="alert alert-success">
    <h4>Thank you for your rental request!</h4>
    <p>Your request has been received and is being processed. You will receive an email confirmation shortly.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h4>Reservation Details</h4>
        <dl class="row">
            <dt class="col-sm-4">Reservation ID:</dt>
            <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

            <dt class="col-sm-4">Vehicle:</dt>
            <dd class="col-sm-8">@Model.Vehicle?.Make @Model.Vehicle?.Model (@Model.Vehicle?.LicensePlate)</dd>

            <dt class="col-sm-4">Start Date:</dt>
            <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">End Date:</dt>
            <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Number of Days:</dt>
            <dd class="col-sm-8">@Model.NumberOfDays</dd>

            <dt class="col-sm-4">Daily Rate:</dt>
            <dd class="col-sm-8">@Model.DailyRate.ToString("C")</dd>

            <dt class="col-sm-4">Total Amount:</dt>
            <dd class="col-sm-8"><strong class="text-primary">@Model.TotalAmount.ToString("C")</strong></dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">
                @if (Model.Status == CarRental.Domain.Enums.RentalStatus.Pending)
                {
                    <span class="badge bg-warning">Pending Approval</span>
                    <p class="text-muted mt-2"><small>Your rental request is pending admin approval. You will be notified once it's reviewed.</small></p>
                }
                else if (Model.Status == CarRental.Domain.Enums.RentalStatus.Active)
                {
                    <span class="badge bg-success">Approved</span>
                }
                else if (Model.Status == CarRental.Domain.Enums.RentalStatus.Denied)
                {
                    <span class="badge bg-danger">Denied</span>
                }
                else
                {
                    <span class="badge bg-info">@Model.Status</span>
                }
            </dd>
        </dl>

        <div class="mt-4">
            @if (Model.Status == CarRental.Domain.Enums.RentalStatus.Active || Model.Status == CarRental.Domain.Enums.RentalStatus.Completed)
            {
                <a asp-action="DownloadPdf" asp-route-id="@Model.Id" class="btn btn-primary">Download PDF Reservation</a>
            }
            <a asp-action="Dashboard" class="btn btn-info">View My Rentals</a>
            <a asp-controller="Vehicles" asp-action="Index" class="btn btn-secondary">Browse More Vehicles</a>
        </div>
    </div>
</div>

