@{
    ViewData["Title"] = "Home";
    var featuredVehicles = ViewBag.FeaturedVehicles as List<CarRental.Domain.Entities.Vehicle> ?? new List<CarRental.Domain.Entities.Vehicle>();
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome to Car Rental</h1>
    <p class="lead">Find the perfect vehicle for your next trip</p>
    <a asp-controller="Vehicles" asp-action="Index" class="btn btn-primary btn-lg">Browse All Vehicles</a>
</div>

@if (featuredVehicles.Any())
{
    <h2 class="mb-4">Featured Vehicles</h2>
    <div class="row">
        @foreach (var vehicle in featuredVehicles)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@vehicle.Make @vehicle.Model</h5>
                        <p class="card-text">
                            <strong>Type:</strong> @vehicle.VehicleType?.Name<br/>
                            <strong>Year:</strong> @vehicle.Year<br/>
                            <strong>Color:</strong> @vehicle.Color<br/>
                            <strong>Daily Rate:</strong> @vehicle.VehicleType?.DailyRate.ToString("C")
                        </p>
                        <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
